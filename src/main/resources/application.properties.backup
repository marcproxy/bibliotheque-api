# ====================================
# CONFIGURATION MYSQL - BIBLIOTHÈQUE
# ====================================
# URL de connexion à la base de données
spring.datasource.url=jdbc:mysql://localhost:3306/biblio_database?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

# Identifiants de connexion (créés précédemment)
spring.datasource.username=biblio_user
spring.datasource.password=Biblio2024!

# Driver JDBC pour MySQL
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ====================================
# CONFIGURATION JPA/HIBERNATE
# ====================================
# Création/mise à jour automatique des tables
# Options : create, create-drop, update, validate, none
spring.jpa.hibernate.ddl-auto=update

# Afficher les requêtes SQL dans la console
spring.jpa.show-sql=true

# Dialecte Hibernate pour MySQL 8
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# Formater les requêtes SQL affichées
spring.jpa.properties.hibernate.format_sql=true

# Commentaires SQL pour debugging
spring.jpa.properties.hibernate.use_sql_comments=true

# Désactiver Open Session In View (bonne pratique)
spring.jpa.open-in-view=false

# ====================================
# CONFIGURATION POOL DE CONNEXIONS
# ====================================
# Nombre maximum de connexions
spring.datasource.hikari.maximum-pool-size=10

# Nombre minimum de connexions inactives
spring.datasource.hikari.minimum-idle=5

# Timeout de connexion (30 secondes)
spring.datasource.hikari.connection-timeout=30000

# ====================================
# CONFIGURATION SERVEUR
# ====================================
# Port du serveur (par défaut 8080)
server.port=8080

# Inclure les messages d'erreur
server.error.include-message=always
server.error.include-stacktrace=on_param

# ====================================
# LOGGING
# ====================================
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE
logging.level.com.example.demo=DEBUG

# ====================================
# APPLICATION
# ====================================
spring.application.name=Bibliotheque-API

